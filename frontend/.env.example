# Example Environment Variables for MentorConnect Frontend
# Copy this file to .env.development or .env.production and update the values

# Backend API URL
# Development: http://localhost:5000
# Production: https://your-production-backend-url.com
VITE_API_BASE_URL=

# App Configuration
VITE_APP_NAME=MentorConnect
VITE_APP_DESCRIPTION="Connect students with mentors for personalized learning roadmaps"

# Feature Flags
VITE_ENABLE_AUTH=true
VITE_ENABLE_NOTIFICATIONS=true

# API Timeouts (in milliseconds)
VITE_API_TIMEOUT=30000

# Other Configuration
VITE_MAX_FILE_UPLOAD_SIZE=5242880
VITE_ALLOWED_FILE_TYPES=".pdf,.doc,.docx,.txt"
VITE_DEFAULT_PAGINATION_LIMIT=10
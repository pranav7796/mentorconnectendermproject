# Development Environment
VITE_API_BASE_URL=http://localhost:5000

# App Configuration
VITE_APP_NAME=MentorConnect
VITE_APP_DESCRIPTION="Connect students with mentors for personalized learning roadmaps"

# Feature Flags
VITE_ENABLE_AUTH=true
